/* ============================================
   8. LOADING STATES
   ============================================ */
.message-bubble.loading {
    background: #f3f4f6 !important;
    animation: loadingPulse 1.5s infinite !important;
}

@keyframes loadingPulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.5;
    }
}

/* ============================================
   9. RESPONSIVE IMPROVEMENTS
   ============================================ */
@media (max-width: 768px) {
    .dictionary-entry {
        padding: 20px !important;
