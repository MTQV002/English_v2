/* ============================================
   1. DROPDOWN FIX - Natural dropdown behavior
   ============================================ */

/* Force modal and its containers to NOT reverse direction */
.deck-selection-modal,
.deck-selection-modal .modal,
.deck-selection-modal .modal-content {
    display: flex !important;
    flex-direction: column !important;
    align-items: stretch !important;
}

/* Critical: Ensure select elements render in normal document flow */
.deck-selector,
.note-type-selector {
    position: relative !important;
    display: block !important;
    isolation: isolate !important;
}

.deck-selector select,
.note-type-selector select {
    /* Let browser handle dropdown position naturally */
    position: relative !important;
    display: block !important;
    /* Prevent any positioning overrides */
    inset: unset !important;
    top: auto !important;
    bottom: auto !important;
    left: auto !important;
    right: auto !important;
    /* Ensure it's in normal flow */
    float: none !important;
    transform: none !important;
}

/* Ensure dropdown menu opens downward */
.deck-selector select option,
.note-type-selector select option {
    /* Reset any positioning */
    position: static !important;
}

/* Ensure modal has proper stacking */
.deck-selection-modal {
    z-index: 9999 !important;
}

.deck-selection-modal .modal-content {
    max-height: 85vh !important;
    overflow-y: auto !important;
