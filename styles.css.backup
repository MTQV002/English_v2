/* ===================================================================
   ENGLISH DICTIONARY PRO V2 - CUSTOM INDEPENDENT THEME
   Fixed color scheme for both light and dark modes
   =================================================================== */

:root {
    /* Custom theme colors - independent of Obsidian theme */
    --dict-bg-primary: #1a1d2e;
    --dict-bg-secondary: #252839;
    --dict-bg-tertiary: #2d3148;
    --dict-text-primary: #e2e4e9;
    --dict-text-secondary: #a8abbe;
    --dict-text-muted: #6b7280;
    --dict-accent: #3b82f6;
    --dict-accent-hover: #1d4ed8;
    --dict-success: #10b981;
    --dict-error: #ef4444;
    --dict-warning: #f59e0b;
    --dict-border: #374151;
    --dict-hover: #3d4259;
}

/* IMPROVED TYPOGRAPHY - Better readability */
.dictionary-entry,
.dictionary-entry * {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', 'Roboto', 'Helvetica Neue', Arial, sans-serif !important;
    line-height: 1.7 !important;
    letter-spacing: 0.01em !important;
}

.dictionary-entry p,
.definition-section p,
.vietnamese-section p,
.example-item {
    font-size: 1.05rem !important;
    line-height: 1.8 !important;
    font-weight: 400 !important;
    word-spacing: 0.05em !important;
}

.dictionary-entry h4 {
    font-size: 1.15rem !important;
    font-weight: 700 !important;
    letter-spacing: 0.02em !important;
    margin-bottom: 12px !important;
    margin-top: 20px !important;
}

/* FORCE BLACK TEXT FOR ALL CONTENT - HIGHEST PRIORITY */
.dictionary-entry,
.dictionary-entry *,
.definition-section,
.definition-section *,
.vietnamese-section,
.vietnamese-section *,
.examples,
.examples *,
.example-item,
.example-item *,
.synonyms,
.antonyms,
.collocations,
.word-family,
.phrasal-verbs,
.nuance,
.personal-note,
.usage-notes {
    color: #0f172a !important;
}

.definition-section h4,
.vietnamese-section h4,
.examples h4,
.synonyms h4,
.antonyms h4,
.collocations h4,
.word-family h4,
.phrasal-verbs h4,
.nuance h4,
.personal-note h4 {
    color: #3b6cb7 !important;
}

/* === ORIGINAL MASCULINE TECH UI === */

/* Modern Dictionary Header */
.dictionary-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
    padding: 20px 24px;
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    border-radius: 16px;
    color: white;
    box-shadow: 0 8px 32px rgba(30, 41, 59, 0.3);
}

.header-main h2 {
    margin: 0;
    font-size: 1.8em;
    font-weight: 800;
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.header-tagline {
    font-size: 0.9em;
    color: #94a3b8;
    margin-top: 4px;
    font-weight: 500;
}

.header-stats {
    display: flex;
    gap: 20px;
}

.stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.stat-icon {
    font-size: 1.5em;
    margin-bottom: 4px;
}

.stat-label {
    font-size: 0.75em;
    color: #cbd5e1;
    font-weight: 500;
}

/* Enhanced Search Container */
.search-container {
    display: flex;
    gap: 12px;
    align-items: center;
    margin-bottom: 20px;
    padding: 16px;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
}

.lookup-term-input {
    flex: 1;
    padding: 14px 18px;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    font-size: 1.1em;
    font-weight: 500;
    background: #ffffff !important;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    color: #1e293b !important;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
}

.lookup-term-input::placeholder {
    color: #94a3b8 !important;
    font-weight: 400 !important;
}

.lookup-term-input:focus {
    outline: none;
    border-color: #3b82f6;
    box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.12), 0 6px 16px rgba(99, 102, 241, 0.2);
    transform: translateY(-1px);
    background: #ffffff !important;
}

.lookup-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 14px 24px;
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(59, 130, 246, 0.4), 0 2px 8px rgba(6, 182, 212, 0.2);
    position: relative;
    overflow: hidden;
    min-width: 120px;
}

.lookup-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.6s ease;
}

.lookup-btn:hover {
    transform: translateY(-3px) scale(1.03);
    box-shadow: 0 8px 28px rgba(59, 130, 246, 0.5), 0 0 30px rgba(59, 130, 246, 0.2);
    background: linear-gradient(135deg, #2563eb 0%, #0891b2 100%);
}

.lookup-btn:hover::before {
    left: 100%;
}

.btn-icon {
    font-size: 1.1em;
}

.btn-text {
    font-size: 1em;
}

/* Enhanced Loading States */
.lookup-loading {
    text-align: center;
    padding: 40px 20px;
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    border-radius: 16px;
    border: 1px solid #334155;
    color: white;
    position: relative;
    overflow: hidden;
}

.lookup-loading::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(99, 102, 241, 0.2), transparent);
    animation: shimmer 2s infinite;
}

.loading-text {
    font-size: 1.2em;
    font-weight: 600;
    color: #f1f5f9;
    margin: 16px 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

@keyframes shimmer {
    0% { left: -100%; }
    100% { left: 100%; }
}

.tech-loading {
    margin: 20px 0;
}

.loading-steps {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 16px;
}

.step {
    padding: 8px 12px;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.5);
    color: #6b7280;
    font-size: 0.9em;
    font-weight: 500;
    transition: all 0.3s ease;
}

.step.active {
    background: #3b82f6;
    color: white;
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
}

.loading-progress {
    margin-top: 16px;
    height: 4px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 2px;
    overflow: hidden;
}

.progress-bar {
    height: 100%;
    width: 60%;
    background: linear-gradient(90deg, #3b82f6, #06b6d4);
    border-radius: 2px;
    animation: progressSlide 2s ease-in-out infinite;
}

/* Enhanced Error States */
.lookup-error {
    text-align: center;
    padding: 32px 24px;
    background: linear-gradient(135deg, #fef2f2 0%, #fef7f7 100%);
    border-radius: 12px;
    border-left: 4px solid #ef4444;
}

.error-icon {
    font-size: 48px;
    margin-bottom: 16px;
}

.error-message h3 {
    font-size: 1.3em;
    font-weight: 700;
    color: #dc2626;
    margin: 0 0 8px 0;
}

.error-message p {
    color: #7f1d1d;
    margin: 0 0 20px 0;
    font-weight: 500;
}

.retry-btn {
    background: linear-gradient(90deg, #3b82f6 0%, #06b6d4 100%);
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 16px;
}

.retry-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(99, 102, 241, 0.3);
}

/* Button Improvements - Blue Gradient Theme */
.save-btn, .anki-btn {
    font-weight: 600 !important;
    text-transform: none !important;
    letter-spacing: 0.5px !important;
    padding: 12px 24px !important;
    border-radius: 10px !important;
    border: none !important;
    cursor: pointer !important;
    transition: all 0.3s ease !important;
    font-size: 1em !important;
    display: inline-flex !important;
    align-items: center !important;
    gap: 8px !important;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1) !important;
}

.save-btn {
    background: linear-gradient(90deg, #4f8cff 0%, #3b6cb7 100%) !important;
    color: white !important;
}

.save-btn:hover {
    background: linear-gradient(90deg, #3b6cb7 0%, #4f8cff 100%) !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 8px 24px rgba(79, 140, 255, 0.4) !important;
}

.anki-btn {
    background: linear-gradient(90deg, #3b82f6 0%, #06b6d4 100%) !important;
    color: white !important;
}

.anki-btn:hover {
    background: linear-gradient(90deg, #06b6d4 0%, #3b82f6 100%) !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 8px 24px rgba(99, 102, 241, 0.4) !important;
}

/* Animations */
@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
}

@keyframes progressSlide {
    0% { transform: translateX(-100%); }
    50% { transform: translateX(0%); }
    100% { transform: translateX(100%); }
}

/* Modern, inspiring English learning UI */
.llm-dictionary-view {
    padding: 20px 12px 20px 12px;
    height: 100%;
    overflow: hidden;
    /* Pure white background - NO gradients */
    background: #fafbfc;
    font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
}

.dictionary-view-content {
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 18px;
}

.dictionary-entry {
    /* Premium glass morphism vá»›i subtle gradient */
    background: 
        linear-gradient(135deg, 
            rgba(255, 255, 255, 0.95) 0%, 
            rgba(255, 255, 255, 0.9) 100%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    backdrop-filter: blur(20px) saturate(180%);
    border-radius: 20px;
    box-shadow: 
        0 8px 32px rgba(59, 130, 246, 0.08),
        0 4px 16px rgba(168, 85, 247, 0.06),
        0 0 0 1px rgba(255, 255, 255, 0.8) inset;
    padding: 0 !important;
    margin: 0 auto 24px auto;
    max-width: 750px;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    border: 1px solid rgba(255, 255, 255, 0.4);
    position: relative;
    animation: floatIn 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    overflow: visible;
    -webkit-user-select: text !important;
    user-select: text !important;
    cursor: text !important;
}

.dictionary-entry * {
    -webkit-user-select: text !important;
    user-select: text !important;
    cursor: text !important;
}

.dictionary-entry::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(
        90deg, 
        #3b82f6 0%, 
        #06b6d4 25%, 
        #06b6d4 50%,
        #06b6d4 75%,
        #3b82f6 100%
    );
    background-size: 200% 100%;
    animation: shimmerFlow 3s ease-in-out infinite;
    border-radius: 20px 20px 0 0;
    box-shadow: 0 2px 12px rgba(59, 130, 246, 0.4);
}

@keyframes shimmerFlow {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

.dictionary-entry:hover {
    transform: translateY(-4px) scale(1.01);
    box-shadow: 
        0 20px 60px rgba(59, 130, 246, 0.15),
        0 12px 32px rgba(168, 85, 247, 0.12),
        0 0 0 1px rgba(255, 255, 255, 0.9) inset,
        0 0 40px rgba(59, 130, 246, 0.2);
    border-color: rgba(59, 130, 246, 0.5);
}

@keyframes floatIn {
    0% {
        opacity: 0;
        transform: translateY(30px) scale(0.95);
    }
    100% {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.word-header {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 12px;
    margin: 0 !important;
    padding: 28px 32px 24px 32px !important;
    background: linear-gradient(135deg, 
        rgba(59, 130, 246, 0.03) 0%, 
        rgba(168, 85, 247, 0.02) 100%);
    border-bottom: 2px solid transparent;
    border-image: linear-gradient(90deg, 
        rgba(59, 130, 246, 0.3), 
        rgba(168, 85, 247, 0.3)) 1;
    position: relative;
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
    background: #ffffff;
}

.word-header::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 28px;
    width: 60px;
    height: 2px;
    background: #3b82f6;
    border-radius: 2px;
}

.word-term {
    font-size: 2.5rem;
    font-weight: 900;
    background: linear-gradient(
        135deg, 
        #1e40af 0%, 
        #3b82f6 30%,
        #06b6d4 60%,
        #06b6d4 100%
    );
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.01em;
    margin: 0;
    animation: gradientShift 8s ease infinite, fadeIn 0.4s ease-out;
    text-shadow: 0 2px 20px rgba(59, 130, 246, 0.2);
    filter: drop-shadow(0 2px 8px rgba(59, 130, 246, 0.15));
}

@keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

@keyframes fadeIn {
    from { 
        opacity: 0; 
        transform: translateY(-8px);
    }
    to { 
        opacity: 1; 
        transform: translateY(0);
    }
}

.word-type {
    font-size: 0.9rem;
    color: #ffffff !important;
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    padding: 6px 14px;
    border-radius: 8px;
    font-weight: 600;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    box-shadow: 
        0 2px 8px rgba(59, 130, 246, 0.3),
        0 0 0 1px rgba(255, 255, 255, 0.2) inset;
    animation: fadeIn 0.5s ease-out 0.1s both;
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    margin: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
    flex-shrink: 0;
}

.word-type:hover {
    transform: translateY(-2px);
    box-shadow: 
        0 4px 16px rgba(59, 130, 246, 0.4),
        0 0 0 1px rgba(255, 255, 255, 0.3) inset;
}

.pronunciation {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 12px;
}

.ipa {
    font-size: 1.2rem;
    color: #0ea5e9 !important;
    font-family: 'Fira Mono', 'Consolas', monospace;
    background: rgba(14, 165, 233, 0.06);
    border: 1px solid rgba(14, 165, 233, 0.2);
    border-radius: 6px;
    padding: 4px 12px;
    margin-right: 8px;
    font-weight: 600;
    transition: all 0.2s ease;
}

.ipa:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(14, 165, 233, 0.2);
    border-color: rgba(14, 165, 233, 0.5);
}

/* Modern Section Headers */
.definition-section h4,
.vietnamese-section h4,
.examples h4,
.synonyms h4,
.antonyms h4,
.collocations h4,
.word-family h4,
.phrasal-verbs h4,
.nuance h4,
.personal-note h4 {
    color: #3b6cb7;
    font-size: 1.2rem;
    font-weight: 700;
    margin-bottom: 8px;
    margin-top: 20px;
    letter-spacing: 0.3px;
    padding-left: 16px;
    position: relative;
    text-transform: uppercase;
    font-size: 0.95rem;
}

.definition-section h4::before,
.vietnamese-section h4::before,
.examples h4::before,
.synonyms h4::before,
.antonyms h4::before,
.collocations h4::before,
.word-family h4::before,
.phrasal-verbs h4::before,
.nuance h4::before,
.personal-note h4::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 16px;
    background: linear-gradient(135deg, #4f8cff 0%, #3b6cb7 100%);
    border-radius: 2px;
}

/* Modern Content Styling */
.definition-section,
.vietnamese-section {
    background: linear-gradient(135deg, 
        rgba(255, 255, 255, 0.9) 0%, 
        rgba(255, 255, 255, 0.85) 100%);
    -webkit-backdrop-filter: blur(12px) saturate(150%);
    backdrop-filter: blur(12px) saturate(150%);
    border-radius: 16px;
    padding: 24px 28px;
    margin: 0 24px 16px 24px;
    border-left: 4px solid transparent;
    border-image: linear-gradient(180deg, 
        #3b82f6 0%, 
        #06b6d4 100%) 1;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 
        0 4px 12px rgba(59, 130, 246, 0.08),
        0 0 0 1px rgba(255, 255, 255, 0.5) inset;
    position: relative;
    overflow: hidden;
}

.definition-section::before,
.vietnamese-section::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 100px;
    height: 100px;
    background: radial-gradient(
        circle at center,
        rgba(59, 130, 246, 0.08) 0%,
        transparent 70%
    );
    pointer-events: none;
}

.definition-section:hover,
.vietnamese-section:hover {
    transform: translateX(4px);
    box-shadow: 
        0 8px 24px rgba(59, 130, 246, 0.12),
        0 0 0 1px rgba(255, 255, 255, 0.6) inset,
        -4px 0 20px rgba(59, 130, 246, 0.15);
    border-left-color: #2563eb;
}

.definition-section p,
.vietnamese-section p {
    font-size: 1.05rem;
    color: #1e293b !important;
    margin: 0;
    line-height: 1.65;
    font-weight: 400;
}

.definition-section,
.vietnamese-section,
.examples,
.example-list,
.example-item {
    color: #1e293b !important;
}

/* Modern Examples Section */
.examples,
.synonyms,
.antonyms,
.collocations,
.word-family,
.phrasal-verbs,
.usage-notes,
.common-mistakes,
.personal-note {
    padding: 20px 28px;
    margin: 0 24px 16px 24px;
    background: linear-gradient(135deg, 
        rgba(255, 255, 255, 0.88) 0%, 
        rgba(255, 255, 255, 0.82) 100%);
    -webkit-backdrop-filter: blur(12px) saturate(150%);
    backdrop-filter: blur(12px) saturate(150%);
    border-radius: 16px;
    border-left: 4px solid transparent;
    border-image: linear-gradient(180deg, 
        #10b981 0%, 
        #06b6d4 100%) 1;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 
        0 4px 12px rgba(16, 185, 129, 0.08),
        0 0 0 1px rgba(255, 255, 255, 0.5) inset;
    position: relative;
    overflow: hidden;
}

.examples::before,
.synonyms::before,
.antonyms::before,
.collocations::before,
.word-family::before,
.phrasal-verbs::before,
.usage-notes::before,
.common-mistakes::before,
.personal-note::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 100px;
    height: 100px;
    background: radial-gradient(
        circle at center,
        rgba(16, 185, 129, 0.08) 0%,
        transparent 70%
    );
    pointer-events: none;
}

.examples:hover,
.synonyms:hover,
.antonyms:hover,
.collocations:hover,
.word-family:hover,
.phrasal-verbs:hover,
.usage-notes:hover,
.common-mistakes:hover,
.personal-note:hover {
    transform: translateX(4px);
    box-shadow: 
        0 8px 24px rgba(16, 185, 129, 0.12),
        0 0 0 1px rgba(255, 255, 255, 0.6) inset,
        -4px 0 20px rgba(16, 185, 129, 0.15);
}

.example-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-top: 12px;
}

.example-item {
    background: linear-gradient(135deg, 
        rgba(249, 250, 251, 0.95) 0%,
        rgba(240, 253, 250, 0.9) 100%);
    border: 1px solid rgba(16, 185, 129, 0.15);
    border-radius: 12px;
    padding: 14px 18px 14px 44px;
    font-size: 1rem;
    color: #1e293b !important;
    line-height: 1.7;
    position: relative;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 
        0 2px 6px rgba(16, 185, 129, 0.04),
        0 0 0 1px rgba(255, 255, 255, 0.6) inset;
    -webkit-backdrop-filter: blur(8px);
    backdrop-filter: blur(8px);
}

.example-item::before {
    content: 'ðŸ’¬';
    position: absolute;
    left: 14px;
    top: 16px;
    font-size: 18px;
    filter: drop-shadow(0 2px 4px rgba(16, 185, 129, 0.3));
}

.example-item:hover {
    transform: translateX(6px);
    background: linear-gradient(135deg, 
        rgba(255, 255, 255, 0.98) 0%,
        rgba(240, 253, 250, 0.95) 100%);
